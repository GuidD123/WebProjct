                name="bigliettoId"
                value="<%= bigliettoCosplayer.id %>"
              />
              <input
                type="number"
                title="Massimo 5 biglietti per utente"
                name="quantita"
                value="1"
                min="1"
                max="<%= bigliettoCosplayer.disponibili %>"
                required
              />
              <button type="submit" class="btn">Acquista ora</button>
            </form>
            <% } else { %>
            <button class="btn-disabled" disabled>Esaurito</button>
