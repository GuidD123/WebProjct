            <% if (bigliettoDisabili.disponibili> 0) { %>
            <form action="/biglietti/acquista" method="POST">
              <input
                type="hidden"
                name="bigliettoId"
                value="<%= bigliettoDisabili.id %>"
              />
              <input
                type="number"
                name="quantita"
                value="1"
                min="1"
                max="<%= bigliettoDisabili.disponibili %>"
