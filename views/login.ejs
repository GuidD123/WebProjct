<!DOCTYPE html>
<html lang="it">

<head>
  <meta charset="UTF-8">
  <title>Login - ComixCity</title>
  <link rel="stylesheet" href="/css/stile.css">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body>
  <%- include('partials/navbar1') %>
    <% if (errore) { %>
      <p class="errore" data-aos="fade-down" class="errore-login">
        <%= errore %>
      </p>
      <% } %>


        <section class="background-gradient">

          <!-- HERO LOGIN -->
          <section class="hero2 login-hero">
            <div class="hero-content-chisiamo">
              <!--<h1 class="titolo-piccolo" data-aos="fade-up">Accedi</h1>-->
              <h1 data-aos="fade-up" data-aos-delay="300">Benvenuto!</h1>
              <h2 data-aos="fade-up" data-aos-delay="300">Entra nel mondo di ComixCity!</h2>
            </div>
          </section>

          <!-- FORM LOGIN -->
          <section class="login-main">
            <div class="login-container">
              <h2 data-aos="fade-up">Effettua il login</h2>
              <form action="/login" method="POST" class="login-form">
                <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                  <label for="email">Email:</label>
                  <input type="email" id="email" name="email" required placeholder="Inserisci la tua email">
                </div>
                <div class="form-group" data-aos="fade-up" data-aos-delay="400">
                  <label for="password">Password:</label>
                  <input type="password" id="password" name="password" required placeholder="Inserisci la password">
                </div>
                <button type="submit" class="btn" data-aos="fade-up" data-aos-delay="600">Accedi</button>
              </form>

              <p class="form-link" data-aos="fade-up" data-aos-delay="800">
                Non hai un account? <a href="/register">Registrati</a>
              </p>
            </div>
          </section>
        </section>


        <%- include('partials/footer') %>
          <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
          <script src="/js/script.js"></script>

</body>

</html>